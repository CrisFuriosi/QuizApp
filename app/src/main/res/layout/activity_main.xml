<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.milanii.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:contentDescription="@string/header_img"
            android:scaleType="fitCenter"
            android:src="@drawable/header" />

        <TextView
            style="@style/questionTitleStyle"
            android:layout_margin="@dimen/margin"
            android:text="@string/intro" />

        <TextView
            style="@style/questionTitleStyle"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/ask_name" />

        <EditText
            android:id="@+id/user_name"
            style="@style/introEditTextStyle"
            android:hint="@string/name" />

        <LinearLayout
            style="@style/questionContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/questionTitleStyle"
                android:text="@string/question_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/questionChoicesStyle"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/quiz_1_answer_a"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_1_a" />

                    <CheckBox
                        android:id="@+id/quiz_1_answer_b"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_1_b" />

                    <CheckBox
                        android:id="@+id/quiz_1_answer_c"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_1_c" />
                </LinearLayout>

                <ImageView
                    style="@style/questionImageStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/quiz1_img"
                    android:src="@drawable/quiz1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/questionContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/questionTitleStyle"
                android:layout_marginBottom="@dimen/small_margin"
                android:text="@string/question_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/quiz_2_answer"
                    style="@style/questionEditTextStyle"
                    android:hint="@string/question_2_guess" />

                <ImageView
                    style="@style/questionImageStyle"
                    android:contentDescription="@string/quiz2_img"
                    android:src="@drawable/quiz2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/questionContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/questionTitleStyle"
                android:text="@string/question_3" />

            <LinearLayout
                style="@style/questionChoicesStyle"
                android:orientation="horizontal">

                <RadioGroup
                    style="@style/questionChoicesStyle"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/quiz_3_answer_a"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_3_a" />

                    <RadioButton
                        android:id="@+id/quiz_3_answer_b"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_3_b" />

                    <RadioButton
                        android:id="@+id/quiz_3_answer_c"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_3_c" />
                </RadioGroup>

                <ImageView
                    style="@style/questionImageStyle"
                    android:contentDescription="@string/quiz3_img"
                    android:src="@drawable/quiz3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/questionContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/questionTitleStyle"
                android:text="@string/question_4" />

            <CheckBox
                android:id="@+id/quiz_4_answer_a"
                style="@style/checkBoxesAndRadioButtonsStyle"
                android:text="@string/answer_4_a" />

            <CheckBox
                android:id="@+id/quiz_4_answer_b"
                style="@style/checkBoxesAndRadioButtonsStyle"
                android:text="@string/answer_4_b" />

            <CheckBox
                android:id="@+id/quiz_4_answer_c"
                style="@style/checkBoxesAndRadioButtonsStyle"
                android:text="@string/answer_4_c" />
        </LinearLayout>

        <LinearLayout
            style="@style/questionContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/questionTitleStyle"
                android:text="@string/question_5" />

            <LinearLayout
                style="@style/questionChoicesStyle"
                android:orientation="horizontal">

                <RadioGroup
                    style="@style/questionChoicesStyle"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/quiz_5_answer_a"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_5_a" />

                    <RadioButton
                        android:id="@+id/quiz_5_answer_b"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_5_b" />

                    <RadioButton
                        android:id="@+id/quiz_5_answer_c"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/answer_5_c" />
                </RadioGroup>

                <ImageView
                    style="@style/questionImageStyle"
                    android:contentDescription="@string/quiz5_img"
                    android:src="@drawable/quiz5" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:onClick="submit"
            android:text="@string/check_results" />
    </LinearLayout>
</ScrollView>



