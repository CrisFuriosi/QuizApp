<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.milanii.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:contentDescription="@string/img_header_description_string"
            android:scaleType="fitCenter"
            android:src="@drawable/image_header" />

        <TextView
            style="@style/quizTitleStyle"
            android:layout_margin="@dimen/margin"
            android:text="@string/txt_header_intro_string" />

        <TextView
            style="@style/quizTitleStyle"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/txt_header_ask_name_string" />

        <EditText
            android:id="@+id/edit_user_name"
            style="@style/introEditTextStyle"
            android:hint="@string/edit_header_name_hint_string" />

        <LinearLayout
            style="@style/quizContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/quizTitleStyle"
                android:text="@string/txt_quiz_1_title_famous_for_string" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/quizChoicesStyle"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_quiz_1_answer_a_shopping"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/cb_quiz_1_answer_a_shopping_string" />

                    <CheckBox
                        android:id="@+id/cb_quiz_1_answer_b_beaches"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/cb_quiz_1_answer_b_beaches_string" />

                    <CheckBox
                        android:id="@+id/cb_quiz_1_answer_c_cathedral"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/cb_quiz_1_answer_c_cathedral_string" />
                </LinearLayout>

                <ImageView
                    style="@style/quizImageStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/img_quiz_1_shoes_description_string"
                    android:src="@drawable/image_quiz1_famous_for" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/quizContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/quizTitleStyle"
                android:layout_marginBottom="@dimen/small_margin"
                android:text="@string/txt_quiz_2_title_who_painted_mural_string" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_quiz_2_answer"
                    style="@style/quizEditTextStyle"
                    android:hint="@string/edit_quiz_2_hint_guess_string" />

                <ImageView
                    style="@style/quizImageStyle"
                    android:contentDescription="@string/img_quiz_2_mural_description_string"
                    android:src="@drawable/image_quiz2_mural" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/quizContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/quizTitleStyle"
                android:text="@string/txt_quiz_3_title_food_string" />

            <LinearLayout
                style="@style/quizChoicesStyle"
                android:orientation="horizontal">

                <RadioGroup
                    style="@style/quizChoicesStyle"
                    android:orientation="vertical">

                    <RadioButton
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/rb_quiz_3_answer_a_pandoro_string" />

                    <RadioButton
                        android:id="@+id/rb_quiz_3_answer_b_panettone"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/rb_quiz_3_answer_b_panettone_string" />

                    <RadioButton
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/rb_quiz_3_answer_c_pandolce_string" />
                </RadioGroup>

                <ImageView
                    style="@style/quizImageStyle"
                    android:contentDescription="@string/img_quiz_3_food_description_string"
                    android:src="@drawable/image_quiz3_food" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/quizContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/quizTitleStyle"
                android:text="@string/txt_quiz_4_title_can_do_string" />

            <CheckBox
                android:id="@+id/cb_quiz_4_answer_a_letters"
                style="@style/checkBoxesAndRadioButtonsStyle"
                android:text="@string/cb_quiz_4_answer_a_letters_string" />

            <CheckBox
                android:id="@+id/cb_quiz_4_answer_b_beaches"
                style="@style/checkBoxesAndRadioButtonsStyle"
                android:text="@string/cb_quiz_4_answer_b_tram_string" />

            <CheckBox
                android:id="@+id/cb_quiz_4_answer_c_cathedral"
                style="@style/checkBoxesAndRadioButtonsStyle"
                android:text="@string/cb_quiz_4_answer_c_coffee_string" />
        </LinearLayout>

        <LinearLayout
            style="@style/quizContainerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                style="@style/quizTitleStyle"
                android:text="@string/txt_quiz_5_title_mountains" />

            <LinearLayout
                style="@style/quizChoicesStyle"
                android:orientation="horizontal">

                <RadioGroup
                    style="@style/quizChoicesStyle"
                    android:orientation="vertical">

                    <RadioButton
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/rb_quiz_5_answer_a_carpazi_string" />

                    <RadioButton
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/rb_quiz_5_answer_a_apennines_string" />

                    <RadioButton
                        android:id="@+id/rb_quiz_5_answer_c_alps"
                        style="@style/checkBoxesAndRadioButtonsStyle"
                        android:text="@string/rb_quiz_5_answer_c_alps_string" />
                </RadioGroup>

                <ImageView
                    style="@style/quizImageStyle"
                    android:contentDescription="@string/img_quiz_5_mountains_description_string"
                    android:src="@drawable/image_quiz5_mountains" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_submit_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:onClick="submitResults"
            android:text="@string/btn_check_results_string" />
    </LinearLayout>
</ScrollView>



