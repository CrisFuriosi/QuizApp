<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="colorAccent">#607D8B</item>
    </style>

    <!-- Intro EditText style -->
    <style name = "introEditTextStyle">
        <item name="android:layout_width">match_parent</item> //
        <item name="android:layout_height">wrap_content</item> //
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!--Question container LinearLayout style-->
    <style name="questionContainerLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <!-- Question title style -->
    <style name="questionTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ECEFF1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <!-- Question choices LinearLayout style -->
    <style name="questionChoicesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/question_choices_weight</item>
    </style>

    <!-- CheckBoxes and RadioButtons style -->
    <style name="checkBoxesAndRadioButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Question EditText style -->
    <style name = "questionEditTextStyle" parent="@style/introEditTextStyle">
        <item name="android:layout_weight">@dimen/question_choices_weight</item>
    </style>

    <!-- Question image style -->
    <style name="questionImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">@dimen/question_image_weight</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
